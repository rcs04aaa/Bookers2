<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  
</table>

<h1>add New Book</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
　<h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %>
