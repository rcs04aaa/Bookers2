<!--user 編集画面-->
<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          
          <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
          <div class="form-group">
            <h4>Name</h4>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <h4>Image</h4>
            <% if list.image.attached? %>
            <%= f.file_field :image, accept: "image/*" %>
            <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          </div>
          <div class="form-group">
            <h4>Introduction</h4>
            <%= f.text_area :introduction %>
          </div>
          <%= link_to 'Update User',user_path, class: "btn btn-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</body>

